            <Label fx:id="ageLabel" text="Age:" />
            <Label fx:id="energyLabel" text="Energy:" />
            <Label fx:id="genomLabel" text="Genom:" />
            <Separator prefWidth="200.0" />
            <Label fx:id="total_children" text="Tracking children: 0" />
            <Label fx:id="total_offspring" text="Tracking offspring: 0" />
            <Label fx:id="death_epoch" text="Not dead" />
